<?xml version="1.0" encoding="utf-8"?>
<cn.guLang.customview.BackScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.guLang.customview.SlideShowView
            android:id="@+id/slideshowView"
            android:layout_width="fill_parent"
            android:layout_height="600px"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10px" />

        <cn.guLang.customview.ScrollListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></cn.guLang.customview.ScrollListView>
    </LinearLayout>
</cn.guLang.customview.BackScrollView>