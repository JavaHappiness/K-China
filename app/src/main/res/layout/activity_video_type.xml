<?xml version="1.0" encoding="utf-8"?>
<cn.guLang.customview.BackScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/backScrollView"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.guLang.customview.SlideShowView
            android:id="@+id/slideshowView"
            android:layout_width="fill_parent"
            android:layout_height="600px"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10px" />

        <cn.guLang.customview.GridViewWithHeaderAndFooter
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:listSelector="@null"
            android:numColumns="3">

        </cn.guLang.customview.GridViewWithHeaderAndFooter>
    </LinearLayout>
</cn.guLang.customview.BackScrollView>